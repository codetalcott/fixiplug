{
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "src/core/**/*",
    "src/hub/**/*",
    "src/plugs/**/*",
    "tests/**/*"
  ]
}