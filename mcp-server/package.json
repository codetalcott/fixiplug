{
  "name": "fixiplug-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for FixiPlug agent commands",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "fixiplug-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "keywords": ["mcp", "fixiplug", "agent", "automation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "playwright": "^1.48.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.2"
  }
}
